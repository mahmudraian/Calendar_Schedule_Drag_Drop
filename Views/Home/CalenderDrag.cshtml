        function parseDMY(dateStr) {
            if (!dateStr) return null;

            // If already a Date object
            if (dateStr instanceof Date) return dateStr;

            // Expecting DD-MM-YYYY
            const parts = dateStr.split("-");
            if (parts.length !== 3) return null;

            const [day, month, year] = parts.map(Number);
            return new Date(year, month - 1, day);
        }



    function LoadTask(tasks, calendarStartDate) {
    const workingHours = @workingHours;
    $('.task').remove();

    const calendarStart = new Date(calendarStartDate);
    calendarStart.setHours(0, 0, 0, 0);


    tasks.forEach(task => {

        const $row = $(`.row[data-line="${task.line_id}"]`);
        if (!$row.length) return;

        const $firstCell = $row.find('.cell').first();
        if (!$firstCell.length) return;

        
        const hourWidth = $firstCell.find('.hour-mini').first().outerWidth();
        const dayWidth  = workingHours * hourWidth;
        const leftBase = $row.find('.line-name').outerWidth();

        const startDate = parseDMY(task.start_date);
        const endDate = parseDMY(task.end_date);

        const startDayIndex = dayDiff(calendarStart, startDate);
        if (startDayIndex < 0) return;

        const startHour = parseInt(task.start_hour);
        const endHour = parseInt(task.end_hour);

       
        let totalHours = 0;

        if (startDate.toDateString() === endDate.toDateString()) {
            // Same day
            totalHours = endHour - startHour;
        } else {
            // Multi day
            const firstDayHours = workingHours - startHour;
            const lastDayHours  = endHour;
            const middleDays    = dayDiff(startDate, endDate)-1;

            totalHours =
                firstDayHours +
                (middleDays > 0 ? middleDays * workingHours : 0) +
                lastDayHours;
        }

        if (totalHours <= 0) return;

        const totalWidth = totalHours * hourWidth;

        // ---- LEFT OFFSET (DATE + HOUR MATCH) ----
        const leftOffset =
            leftBase +
            (startDayIndex * dayWidth) +
            (startHour * hourWidth);

        // ---- DRAW TASK ----
        const $task = $('<div>', {
            class: 'task',
            id: `task_${task.plan_id}`,
            text: task.JOB_NO,
            draggable: true,
            css: {
                position: 'absolute',
                left: leftOffset + 'px',
                top: '4px',
                width: totalWidth + 'px',
                height: '45px',
                border: '1px solid #333',
                lineHeight: '45px',
                whiteSpace: 'nowrap',
                overflow: 'hidden'
            }
        })
            .attr('data-id', task.plan_id)
            .attr('data-start-date', parseDMY(task.start_date))
            .attr('data-start-hour', startHour)
            .attr('data-end-date', parseDMY(task.end_date))
            .attr('data-end-hour', endHour)
            .attr('data-quantity', task.plan_qnty)
            .attr('data-name', task.JOB_NO);

        $row.append($task);
    });
        }


