            if (!d1 || !d2 || isNaN(d1) || isNaN(d2)) {
                console.error("Invalid dates in dayDiff", date1, "~~~~~~~~~", date2);
                return 0;
            }

            const diffMs = d2 - d1;
            return Math.floor(diffMs / (1000 * 60 * 60 * 24));
        }

